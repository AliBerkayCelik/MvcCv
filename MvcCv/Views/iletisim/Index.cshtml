@using MvcCv.Models.Entity
@model List<TBLILETISIM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                      
                        <div class="card-body">
                            <div class="card-header">
                                <h2>İletişim Sayfası</h2>

                            </div>
                            <br />

                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var x in Model)
                                        {
                                            <div class="time-label">
                                                <span class="bg-info">
                                                    @(((DateTime)x.Tarih).ToString("dd-M-yyyy"))
                                                </span>
                                            </div>



                                            <div>
                                                <i class="fas fa-comments bg-gradient"></i>
                                                <div class="timeline-item">
                                                    <span class="time"><span style="font-size:15px">@x.Mail</span></span>
                                                    <h3 class="timeline-header"><a href="#">@x.AdSoyad</a></h3>
                                                    <div class="timeline-body">
                                                       @x.Mesaj
                                                    </div>
                                                    <a href="/iletisim/iletisimSil/@x.ID" class="btn btn-danger btn-sm" style=" margin: 5px">Sil</a>
                                                </div>
                                            </div>

                                        }


                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
       
    </section>
</body>
</html>

